<% @title = "Edit this construction" %>

<% form_for(@construction) do |f| %>
  <fieldset>
    <legend>Instructions</legend>

    Notation: <%= f.select :notation_id, notation_options %><br />
    <%= f.text_area :definition, :class => "instructions" %>
  </fieldset>

  <%= f.submit "Save changes" %> or <%= link_to("cancel", @construction) %>
<% end %>
