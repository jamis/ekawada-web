<% @title = "Add a new figure" %>

<%= form_for(@figure) do |f| %>
  <fieldset>
    <legend>General information</legend>

    <%= render "form", :form => f %>
  </fieldset>

  <fieldset>
    <legend>Instructions</legend>

    <%= f.fields_for(@figure.constructions.build) do |c| %>
      <%= render :partial => "constructions/form", :object => c %>
    <% end %>
  </fieldset>

  <%= f.submit "Add this figure" %>
<% end %>
